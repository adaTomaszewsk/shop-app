<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link rel="stylesheet" href="{{ asset('/assets/css/authenticationCSS.css') }}">
        {% block stylesheets %}
        {% endblock %}

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz" crossorigin="anonymous"></script>
        {% block javascripts %}
        {% endblock %}
    <body>
            <div class="container">
                <div class="card">
                    <div class="card-header text-center">
                        <h1>
                            <span class="styleActive">Zaloguj się</span>
                            /
                            <a href={{ path('app_registration') }} class="style">
                                Zarejestruj się
                            </a>
                        </h1>
                    </div>
                    <div class="card-body text-center">
                        <form class='contentInColumn' action="{{ path('app_login') }}" method="post">
                            <label for="username">Email:</label>
                            <input class='form-control' type="text" id="username" name="_username" placeholder="E-mail">
                            <br>
                            <label for="password">Password:</label>
                            <input class='form-control' type="password" id="password" name="_password" placeholder="Password">
                            <br>
                            <button class='btn btn-outline-success' type="submit">login</button>
                        </form>
                    </div>
                </div>
            </div>
    </body>
</html>
