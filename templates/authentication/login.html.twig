{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('/assets/css/authenticationCSS.css') }}">
{% endblock %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}
    <div class="container">
        <div class="card">
            <div class="card-header text-center">
                <h1>
                    <span class="styleActive">Zaloguj się</span>
                    /
                    <a href={{ path('app_registration') }} class="style">
                        Zarejestruj się
                    </a>
                </h1>
            </div>
            <div class="card-body">
                <form class='contentInColumn' action="{{ path('app_login') }}" method="post">
                    <label for="username">Email:</label>
                    <input class='form-control' type="text" id="username" name="_username" placeholder="E-mail">
                    <br>
                    <label for="password">Password:</label>
                    <input class='form-control' type="password" id="password" name="_password" placeholder="Password">
                    <br>
                    <button class='btn btn-outline-success' type="submit">login</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}